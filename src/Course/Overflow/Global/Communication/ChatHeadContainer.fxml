<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<AnchorPane id="chatHeadContainer" fx:id="container" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Course.Overflow.Global.Communication.ChatHeadContainerController">
   <children>
      <ScrollPane fx:id="scroll" hbarPolicy="NEVER" layoutX="14.0" layoutY="24.0" pannable="true" vbarPolicy="NEVER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <content>
            <AnchorPane fx:id="chatBoxRootContainer">
               <children>
                  <VBox fx:id="chatBoxContainer" style="-fx-spacing: 0;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <children>
                        <HBox styleClass="chatBox">
                           <children>
                              <Circle fx:id="instPhoto" fill="DODGERBLUE" radius="40.0" stroke="BLACK" strokeType="INSIDE" />
                              <VBox style="-fx-spacing: 0; -fx-alignment: cenger-left;">
                                 <children>
                                    <Label fx:id="instName" styleClass="teacherName" text="Teacher Name" />
                                    <Label fx:id="lastMessage" styleClass="lastMessage" text="Last Message" />
                                    <Label fx:id="courseName" styleClass="lastMessageTime" text="Course Name" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </AnchorPane>
         </content>
      </ScrollPane>
   </children>
   <stylesheets>
      <URL value="@../Global.css" />
      <URL value="@Communication.css" />
   </stylesheets>
</AnchorPane>
