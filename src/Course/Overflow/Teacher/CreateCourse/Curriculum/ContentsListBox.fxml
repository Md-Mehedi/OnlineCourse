<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AvailableContentContainer" fx:id="container" styleClass="centerRightWidth" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Course.Overflow.Teacher.CreateCourse.Curriculum.ContentsListBoxController">
   <children>
      <HBox alignment="CENTER" spacing="70.0" style="-fx-spacing: 100;" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="30.0">
         <children>
            <VBox id="ArticleBtn" fx:id="articleBtn" alignment="CENTER" onMouseClicked="#mouseClicked">
               <children>
                  <FontAwesomeIconView glyphName="FONT" size="50" />
                  <Label text="Article" />
               </children>
               <styleClass>
                  <String fx:value="maxScaleHover" />
                  <String fx:value="cursorHand" />
               </styleClass>
            </VBox>
            <VBox id="VideoBtn" fx:id="videoBtn" alignment="CENTER" onMouseClicked="#mouseClicked">
               <children>
                  <FontAwesomeIconView glyphName="VIDEO_CAMERA" size="50" />
                  <Label text="Video" />
               </children>
               <styleClass>
                  <String fx:value="maxScaleHover" />
                  <String fx:value="cursorHand" />
               </styleClass>
            </VBox>
            <VBox id="PDFBtn" fx:id="pdfBtn" alignment="CENTER" onMouseClicked="#mouseClicked">
               <children>
                  <FontAwesomeIconView glyphName="BOOK" size="50" />
                  <Label text="PDF" />
               </children>
               <styleClass>
                  <String fx:value="maxScaleHover" />
                  <String fx:value="cursorHand" />
               </styleClass>
            </VBox>
            <VBox id="LinkBtn" fx:id="linkBtn" alignment="CENTER" onMouseClicked="#mouseClicked">
               <children>
                  <FontAwesomeIconView glyphName="PAPERCLIP" size="50" />
                  <Label text="Link" />
               </children>
               <styleClass>
                  <String fx:value="maxScaleHover" />
                  <String fx:value="cursorHand" />
               </styleClass>
            </VBox>
         </children>
      </HBox>
   </children>
   <stylesheets>
      <URL value="@../../../Global/Global.css" />
      <URL value="@Curriculum.css" />
   </stylesheets>
</AnchorPane>
